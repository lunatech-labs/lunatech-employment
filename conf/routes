# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                          controllers.Application.main()

GET         /edit                      controllers.Application.editCandidate

# Candidate list (look at the default values for pagination parameters)
GET         /:office/candidates                  controllers.Application.listOfCandidate(page:Int ?= 0, office: String)


GET         /all                          controllers.Application.all()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)







